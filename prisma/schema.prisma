generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int    @id @default(autoincrement())
  email    String @unique
  password String
  name     String
  posts    Post[]
}

model Post {
  id             Int     @id @default(autoincrement())
  title          String
  contentPreview String
  content        String
  published      Boolean @default(false)
  authorId       Int
  author         User    @relation(fields: [authorId], references: [id])
}

model Skill {
  id           Int        @id @default(autoincrement())
  name         String
  seniority    String
  authorInfoId Int
  projectId    Int?
  experienceId Int?
  skillId      Int?
  project      Project?   @relation(fields: [projectId], references: [id])
}

model Project {
  id             Int       @id @default(autoincrement())
  title          String
  content        String
  projectHistory History[]
  skills         Skill[]
}

model History {
  id        Int     @id @default(autoincrement())
  content   String
  projectId Int
  project   Project @relation(fields: [projectId], references: [id])
}

model Experience {
  id        Int    @id @default(autoincrement())
  name      String
  workTitle String
}
